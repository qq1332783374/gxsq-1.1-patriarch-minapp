/* pages/textDetail/textDetail.wxss */
.title {
    padding: 30rpx;
    background: #fff;
}
.user {
    background: #fff;
    display: flex;
    padding: 15rpx;
    box-sizing: border-box;
    align-items: center;
}
.user .user-info {
    margin-left: 20rpx;
    width: 70%;
}
.user .user-info .date {
    color: #999999;
    font-size: 12px;
    margin-top: 5px;
}
.text-content {
    padding: 30rpx;
    width: 100%;
    font-size: 15px;
    background: #fff;
}
.text-content .text-img {
    width: 100%;
    min-height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.text-content .txt {
    text-indent: 30px;
    color: #666;
    line-height: 1.8;
    font-size: 16px;
}


.comment {
    margin-top: 10px;
    background: #fff;
}
.comment .header {
    padding: 30rpx;
    display: flex;
    align-items: center;
    font-size: 16px;
}
.header .title ,
.add-comment
{
    flex: 1;
}
 .comment .header text {
    margin: 5px;
}
.header .add-comment {
    text-align: right;
    font-size: 14px;
    color: #666;
}
.comment .no-comment-list {
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.comment .no-comment-list .no-icon {
    font-size: 80px;
    color: #2b99ff;
}
.list-item {
    display: flex;
    padding: 30rpx;
}
.list-item .item-comment-list {
    margin-left: 15px;
    border-bottom: 1px solid #ddd;
    width: 76%;
}
.list-item .item-comment-list .content {
    padding: 10px 0px;
}
.rp {
    margin-top: 10px;
    padding: 5px;
}
.cu-avatar image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.list-item .item-comment-list{
    width: 90%;
}
.reply{
    color: #999;
    font-size: 12px;
}