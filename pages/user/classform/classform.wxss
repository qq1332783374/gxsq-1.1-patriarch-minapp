/* component/card/card.wxss */
.head{
        width: 100%;
        padding: 30px;
        background:#2b99ff;
        font-size: 20px;
        color: white;
    }
.card {
    display:block;
    overflow:hidden;
    position: relative;
}
.card .card-item {
    display:block;
    background-color:#fff;
    overflow:hidden;
    border-radius:10rpx;
    margin:30rpx 15rpx;    
    box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.card .card-item .header {
    font-size:30rpx;
    font-weight:900;
    color:#000;
    line-height:100rpx;
    padding:0 30rpx;
    border-bottom: 1px solid #ddd;
}
.card .card-item .content .desc {
    padding:10rpx 30rpx;
    max-width: 100%;
    overflow: hidden;
    color: #666;
}

.card .card-item .content .desc .text-conetnt {
  height: 80rpx;
  overflow: hidden;
}

.card .card-item .content .date {
    text-align: right;
    padding: 10rpx 0rpx;
    color: #999;
}

.del{
  position: absolute;
  width: 40px;
  height: 40px;
  top: 8px;
  right: 0px;
  color: red;
  text-align: center;
  line-height: 40px;
  font-weight: bold;
}
.del image{
  width: 100%;
  height: 100%;
}
